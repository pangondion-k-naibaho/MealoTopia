<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="18dp"
    android:background="@color/blue_plaza">

    <ImageView
        android:id="@+id/ivAppsIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="2dp"
        android:background="@drawable/bg_circle_white"
        android:src="@drawable/mealotopia_logo"/>

    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/ivAppsIcon"
        app:layout_constraintTop_toBottomOf="@+id/ivAppsIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="exampleuser@email.com"/>

</androidx.constraintlayout.widget.ConstraintLayout>