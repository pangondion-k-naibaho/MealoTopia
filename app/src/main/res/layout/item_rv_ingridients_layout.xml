<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/tvIngridient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="@string/tvRv_DummyIngridientName"/>

    <TextView
        android:id="@+id/tvMeasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvIngridient"
        app:layout_constraintTop_toBottomOf="@+id/tvIngridient"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:text="@string/tvRv_DummyMeasure"/>

</androidx.constraintlayout.widget.ConstraintLayout>