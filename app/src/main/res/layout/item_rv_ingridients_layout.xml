<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_marginTop="1dp"
    android:layout_marginHorizontal="2dp">

    <TextView
        android:id="@+id/tvIngridient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvMeasure"
        android:maxLines="2"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="@string/tvRv_DummyIngridientName"/>

    <TextView
        android:id="@+id/tvMeasure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvIngridient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvIngridient"
        app:layout_constraintBottom_toBottomOf="@+id/tvIngridient"
        android:layout_marginStart="5dp"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:text="@string/tvRv_DummyMeasure"/>

</androidx.constraintlayout.widget.ConstraintLayout>