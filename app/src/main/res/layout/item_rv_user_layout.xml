<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/bg_square_white_grey">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvFullNameUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/ivUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivUser"
        android:textSize="30sp"
        android:fontFamily="@font/italianbreakfastregular"
        android:text="@string/tvIItemUser_DummyName"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvEmailUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tvFullNameUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFullNameUser"
        app:layout_constraintBottom_toBottomOf="@+id/ivUser"
        android:textSize="15sp"
        android:text="@string/tvIItemUser_DummyEmail"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>